{% import "macros.njk" as macros %}

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/assets/styles/normilio.css" />
		<link rel="stylesheet" href="/assets/styles/style.css" />
		<link rel="icon" type="image/webp" href="/assets/images/favicon.webp" />
		{% block head %}{% endblock %}
		<script src="/assets/app.js" type="module"></script>
	</head>
	<body style="opacity:0">
		<header class="main-header">
			<div class="container {{ "container--wide" if wide }} main-header__container">
				{% if linkback %}
					<a class="round-button round-button--ghost back-button" href="{{ linkback }}" title="Back">
						<svg width="15" height="15" viewBox="0 0 15 15" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
							<path d="M8.84182 3.13514C9.04327 3.32401 9.05348 3.64042 8.86462 3.84188L5.43521 7.49991L8.86462 11.1579C9.05348 11.3594 9.04327 11.6758 8.84182 11.8647C8.64036 12.0535 8.32394 12.0433 8.13508 11.8419L4.38508 7.84188C4.20477 7.64955 4.20477 7.35027 4.38508 7.15794L8.13508 3.15794C8.32394 2.95648 8.64036 2.94628 8.84182 3.13514Z" fill-rule="evenodd" clip-rule="evenodd"></path>
						</svg>
					</a>
				{% endif %}
				{% if page == 'index' %}
					<a class="logo">
				{% else %}
					<a class="logo" href="/">
				{% endif %}
					{{ macros.logo() }}
				</a>
				{% block nav %}{% endblock %}
			</div>
		</header>
		{% block main %}{% endblock %}
		<footer class="main-footer">
			<div class="container container--wide main-footer__container">
				<span class="main-footer__copy">&copy; Milo Xeon, {{ currentYear }}</span>
				<a href="#">Privacy policy</a> • <a href="#">Disclosures</a> •
				<button class="round-button theme-button" onclick="toggleTheme()">Dark theme</button>
			</div>
		</footer>
		{% block scripts %}{% endblock %}
		<style>
			body { opacity: 1 !important; }
		</style>
	</body>
</html>
