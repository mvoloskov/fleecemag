{% macro pitch(title = 'Get membership') %}
	<h2 class="push-top">{{ title }}</h2>
	<section class="sign-up">
		<form class="form" action="#">
			<label class="form__field">
				<span class="form__label">Email</span>
				<div class="focus-ring">
					<input class="form__input squircle" type="email" placeholder="henrietta@fleecemag.com" />
				</div>
			</label>
			<div class="focus-ring">
				<button class="form__button squircle">Sign up</button>
			</div>
		</form>
		<article class="pitch">
			<p class="flush-top">Get instant access to all articles, past and future. We'll also send you bite-sized food for thought every now and then to keep your mind occupied.</p>
			<p>All articles are dynamic ‚Äî they update as the world changes and new info comes in.</p>
			<p>We never write about news, politics and drama. Already better than ùïè!</p>
			<p class="small">By signing up, you agree to our <a href="#">privacy policy</a>.</p>
			<b class="price">$8<small>/mo</small></b>
		</article>
	</section>
{% endmacro %}

{% macro article(cover, title, blurb, href = '#') %}
	<a class="article" href="{{ href }}">
		<div class="article__focus-ring">
			<div class="article__cover squircle">
				<img class="article__image" width="1280" height="800" src="{{ cover }}" alt="" />
			</div>
		</div>
		<h2 class="article__heading">{{ title }}</h2>
		<p class="article__blurb">{{ blurb }}</p>
	</a>
{% endmacro %}
