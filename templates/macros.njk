			<p class="small">By signing up, you agree to our <a href="#">privacy policy</a>.</p>
			<b class="price">$8<small>/mo</small></b>
		</article>
	</section>
{% endmacro %}

{% macro article(cover, title, blurb, free, href = '#') %}
	<a class="article {{ 'article--premium' if not free }}" href="{{ href if free else '/auth' }}">
		<div class="article__focus-ring">
			<div class="article__cover squircle">
				<img class="article__image" width="1280" height="800" src="{{ cover }}" alt="" />
			</div>
		</div>
		<h2 class="article__heading">{{ title }}</h2>
		<p class="article__blurb">{{ blurb }}</p>
	</a>
{% endmacro %}
